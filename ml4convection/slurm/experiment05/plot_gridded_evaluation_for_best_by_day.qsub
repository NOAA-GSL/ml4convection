#!/bin/tcsh

#SBATCH --job-name="plot_gridded_evaluation_for_best_by_day"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=8G
##SBATCH --nodes=1
##SBATCH --ntasks=1
##SBATCH --cpus-per-task=1
##SBATCH --ntasks-per-node=1
#SBATCH --time=01:00:00
#SBATCH --array=1-3
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=plot_gridded_evaluation_for_best_by_day_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models/experiment05"

set LAG_TIME_STRINGS=("0-600-1200" "0-600-1200-1800-2400" "0-600-1200")
set CONV_LAYER_DROPOUT_RATES=(0.000 0.000 0.050)
set L2_WEIGHTS=(0.0001000000 0.0001000000 0.0001000000)
set PROBABILITY_THRESHOLDS=(0.18 0.17 0.23)

set lag_time_string="${LAG_TIME_STRINGS[$SLURM_ARRAY_TASK_ID]}"
set conv_layer_dropout_rate=${CONV_LAYER_DROPOUT_RATES[$SLURM_ARRAY_TASK_ID]}
set l2_weight=${L2_WEIGHTS[$SLURM_ARRAY_TASK_ID]}
set prob_threshold=${PROBABILITY_THRESHOLDS[$SLURM_ARRAY_TASK_ID]}

set conv_layer_dropout_string=`printf "%.3f" $conv_layer_dropout_rate`
set l2_weight_string=`printf "%.10f" $l2_weight`
set prob_threshold_string=`printf "%.3f" $prob_threshold`

set model_dir_name="${TOP_MODEL_DIR_NAME}/lag-times-sec=${lag_time_string}_conv-dropout=${conv_layer_dropout_string}_l2-weight=${l2_weight_string}"

set DATE_STRINGS=("20170101" "20170102" "20170103" "20170104" "20170105" "20170106" "20170107" "20170108" "20170109" "20170110" "20170111" "20170112" "20170113" "20170114" "20170115" "20170116" "20170117" "20170118" "20170119" "20170120" "20170121" "20170122" "20170123" "20170124" "20170125" "20170126" "20170127" "20170128" "20170129" "20170130" "20170131")
set i=1

while ($i <= ${#DATE_STRINGS})
    set this_score_file_name="${model_dir_name}/validation/evaluation/${DATE_STRINGS[$i]}/advanced_scores_gridded=1.p"
    set this_output_dir_name="${model_dir_name}/validation/evaluation/${DATE_STRINGS[$i]}/advanced_scores_gridded=1"

    python3 -u "${CODE_DIR_NAME}/plot_gridded_evaluation.py" \
    --input_advanced_score_file_name="${this_score_file_name}" \
    --probability_threshold=${prob_threshold_string} \
    --output_dir_name="${this_output_dir_name}"

    @ i = $i + 1
end
