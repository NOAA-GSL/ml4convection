#!/bin/tcsh

#SBATCH --job-name="make_eval_figures_gridded"
#SBATCH --partition="fge"
#SBATCH --account="rda-ghpcs"
#SBATCH --qos="batch"
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --cpus-per-task=1
#SBATCH --mem=8G
##SBATCH --nodes=1
##SBATCH --ntasks=1
##SBATCH --cpus-per-task=1
##SBATCH --ntasks-per-node=1
#SBATCH --time=01:00:04
#SBATCH --array=1-3
#SBATCH --exclude=h28n12
##SBATCH --exclude=h31n03,h28n12
##SBATCH --exclude=h29n01,h26n05,h28n06,h29n07,h30n03,h30n15
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --mail-user=ryan.lagerquist@noaa.gov
#SBATCH --output=make_eval_figures_gridded_%A_%a.out

module load cuda/10.1
source /scratch2/BMC/gsd-hpcs/Jebb.Q.Stewart/conda3.7/etc/profile.d/conda.csh
conda activate base

set CODE_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_standalone/ml4convection"
set TOP_MODEL_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_models/coord_conv_experiment"
set TOP_OUTPUT_DIR_NAME="/scratch1/RDARCH/rda-ghpcs/Ryan.Lagerquist/ml4convection_project/journal_paper/90minute_models/coord_conv"

set COORD_CONV_FLAGS=(0 1 1)
set INCLUDE_LATLONG_FLAGS=(1 0 1)

set coord_conv_flag=${COORD_CONV_FLAGS[$SLURM_ARRAY_TASK_ID]}
set include_latlong_flag=${INCLUDE_LATLONG_FLAGS[$SLURM_ARRAY_TASK_ID]}

set model_dir_name="${TOP_MODEL_DIR_NAME}/coord-conv=${coord_conv_flag}_include-lat-long=${include_latlong_flag}"
set input_dir_name="${model_dir_name}/validation/full_grids/evaluation/matching_distance_px=4.000000/advanced_scores_gridded=1"
set output_dir_name="${TOP_OUTPUT_DIR_NAME}/batch-size=${batch_size_string}_l2-weight=${l2_weight_string}_lag-times-sec=${lag_time_string_dashed}"

python3 -u "${CODE_DIR_NAME}/make_eval_figure_gridded.py" \
--input_dir_name="${input_dir_name}" \
--output_dir_name="${output_dir_name}"
